<?xml version="1.0" encoding="utf-8"?>
<manifest xmlns:android="http://schemas.android.com/apk/res/android"
    package="com.greenteam.otty">

    <application
        android:allowBackup="true"
        android:icon="@mipmap/otty_logo"
        android:label="@string/app_name"
        android:roundIcon="@mipmap/otty_logo"
        android:supportsRtl="true"
        android:theme="@style/AppTheme">
        <activity android:name=".Calendar" android:screenOrientation="portrait"/>
        <activity android:name=".SecondActivity" android:screenOrientation="portrait"/>
        <activity android:name=".MainMenu" android:screenOrientation="portrait"/>
        <activity android:name=".splashscreen" android:screenOrientation="portrait">
            <intent-filter>
                <action android:name="android.intent.action.MAIN" android:screenOrientation="portrait" />

                <category android:name="android.intent.category.LAUNCHER" />
            </intent-filter>
        </activity>
        <activity android:name=".select_profile" android:screenOrientation="portrait"/>

        <receiver android:name=".AlarmReceiver" android:screenOrientation="portrait" />

        <activity android:name=".DataSummary" android:screenOrientation="portrait"/>
        <activity android:name=".datacharts" android:screenOrientation="portrait" />
        <activity
            android:name=".helpActivity"
            android:label="@string/title_activity_help"
            android:theme="@style/AppTheme.NoActionBar"
            android:screenOrientation="portrait"></activity>
    </application>

</manifest>