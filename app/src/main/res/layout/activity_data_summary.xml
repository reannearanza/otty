<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="#E2DFA2"
    tools:context="com.greenteam.otty.DataSummary">

    <ScrollView
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:fillViewport="true"
        android:isScrollContainer = "false">

        <android.support.constraint.ConstraintLayout
            android:layout_width="match_parent"
            android:layout_height="match_parent">

        <RelativeLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="vertical"
            android:padding="20dp"
            app:layout_constraintBottom_toBottomOf="parent"
            app:layout_constraintTop_toTopOf="parent">

            <ImageView
                android:id="@+id/imageView_logo"
                android:layout_width="match_parent"
                android:layout_height="220dp"
                android:layout_alignParentStart="true"
                android:layout_alignParentTop="true"
                app:srcCompat="@drawable/logosplash" />

            <TextView
                android:id="@+id/textView19"
                android:layout_width="match_parent"
                android:layout_height="37dp"
                android:layout_below="@id/imageView_logo"
                android:fontFamily="@font/gravity_light"
                android:text="Behavior Summary"
                android:textAlignment="center"
                android:textColor="#ED5752"
                android:textSize="30sp"
                android:textStyle="bold"
                android:layout_marginTop="10dp"/>

            <TextView
                android:id="@+id/textView13"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_below="@id/textView19"
                android:layout_marginTop="20dp"
                android:fontFamily="@font/gravity_light"
                android:text="Please select starting and ending date for the analysis of the child's behavior."
                android:textAlignment="center"
                android:textColor="#A99F3C"
                android:textSize="18sp"
                android:textStyle="bold" />

            <TextView
                android:id="@+id/startdate"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_below="@id/textView13"
                android:layout_marginHorizontal="20dp"
                android:layout_marginTop="30dp"
                android:background="@drawable/datebox"
                android:fontFamily="@font/gravity_light"
                android:padding="5dp"
                android:text="Starting Date"
                android:textAlignment="center"
                android:textSize="25sp"
                android:textStyle="bold" />

            <TextView
                android:id="@+id/textView16"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_below="@id/startdate"
                android:layout_marginTop="10dp"
                android:fontFamily="@font/gravity_light"
                android:text="and"
                android:textAlignment="center"
                android:textColor="#A99F3C"
                android:textSize="18sp"
                android:textStyle="bold" />

            <TextView
                android:id="@+id/enddate"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_below="@id/textView16"
                android:layout_marginHorizontal="20dp"
                android:layout_marginTop="10dp"
                android:background="@drawable/datebox"
                android:fontFamily="@font/gravity_light"
                android:padding="5dp"
                android:text="Ending Date"
                android:textAlignment="center"
                android:textSize="25sp"
                android:textStyle="bold" />

            <TextView
                android:id="@+id/textView18"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_below="@id/enddate"
                android:layout_marginTop="20dp"
                android:fontFamily="@font/gravity_light"
                android:text="@string/summarydisclaimer"
                android:textAlignment="center"
                android:textColor="#A99F3C"
                android:textSize="18sp"
                android:textStyle="bold" />

            <Button
                android:id="@+id/btn_startsumm"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_below="@id/textView18"
                android:layout_marginHorizontal="30dp"
                android:layout_marginTop="20dp"
                android:background="@drawable/button_custom"
                android:text="Proceed to Evaluation"
                android:textColor="#ffffff"
                android:fontFamily="@font/gravity_light"
                android:textStyle="bold"
                android:textSize="16dp"/>
        </RelativeLayout>
        </android.support.constraint.ConstraintLayout>
    </ScrollView>
</RelativeLayout>
