<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="#E2DFA2"
    tools:context="com.greenteam.otty.splashscreen">

    <ScrollView
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:fillViewport="true"
        android:isScrollContainer = "false">

        <android.support.constraint.ConstraintLayout
            android:layout_width="match_parent"
            android:layout_height="match_parent">

        <RelativeLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="vertical"
            android:padding="20dp"
            app:layout_constraintBottom_toBottomOf="parent"
            app:layout_constraintTop_toTopOf="parent"
            >

            <ImageView
                android:id="@+id/imageView_logo"
                android:layout_width="match_parent"
                android:layout_height="220dp"
                android:layout_alignParentStart="true"
                android:layout_alignParentTop="true"
                app:srcCompat="@drawable/logosplash" />

            <TextView
                android:id="@+id/textView2"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_below="@+id/imageView_logo"
                android:layout_gravity="center_horizontal"
                android:fontFamily="@font/gravity_light"
                android:text="OTTY"
                android:textAlignment="center"
                android:textColor="#ED5752"
                android:textSize="60sp"
                android:textStyle="bold"/>

            <TextView
                android:id="@+id/textView4"
                android:layout_width="match_parent"
                android:layout_height="53dp"
                android:fontFamily="@font/gravity_light"
                android:text="Observation and Tracking Tool\nfor You"
                android:layout_below="@id/textView2"
                android:textAlignment="center"
                android:textColor="#A99F3C"
                android:textSize="18sp"
                android:textStyle="bold"/>

            <TextView
                android:id="@+id/textView6"
                android:layout_width="match_parent"
                android:layout_height="23dp"
                android:layout_marginTop="50dp"
                android:fontFamily="@font/gravity_light"
                android:text="DISCLAIMER:"
                android:textAlignment="center"
                android:textColor="#ED5752"
                android:textStyle="bold"
                android:layout_below="@id/textView4" />

            <TextView
                android:id="@+id/textView7"
                android:layout_width="match_parent"
                android:layout_height="81dp"
                android:layout_marginBottom="8dp"
                android:fontFamily="@font/gravity_light"
                android:text="OTTY will not, by all means, diagnose your child of Autism. This will only serve as a helping tool to keep track of your child's behavioral progress."
                android:textAlignment="center"
                android:textColor="#A99F3C"
                android:textSize="15sp"
                android:layout_below="@id/textView6"
                android:textStyle="bold"/>

            <TextView
                android:id="@+id/textView8"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:fontFamily="@font/gravity_light"
                android:text="Please wait."
                android:textColor="#ED5752"
                android:textSize="18sp"
                android:textStyle="bold"
                android:layout_below="@id/textView7"
                android:textAlignment="center"
                android:layout_marginTop="10dp"/>
        </RelativeLayout>
        </android.support.constraint.ConstraintLayout>
    </ScrollView>
</RelativeLayout>
