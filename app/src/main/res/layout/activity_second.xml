<?xml version="1.0" encoding="utf-8"?>


<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="#E2DFA2"
    tools:context="com.greenteam.otty.SecondActivity"
    tools:layout_editor_absoluteY="25dp">

<ScrollView
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:fillViewport="true"
    android:isScrollContainer = "false">

    <RelativeLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="vertical"
        android:padding="20dp">

        <TextView
            android:id="@+id/datetextView"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_alignParentStart="true"
            android:layout_alignParentTop="true"
            android:layout_gravity="center_horizontal"
            android:fontFamily="@font/gravity_ultralight"
            android:textStyle="bold"
            android:layout_marginTop="18dp"
            android:text="Entry for Today"
            android:textAlignment="center"
            android:textSize="30sp"
            android:textColor="#ED5752"/>

        <TextView
            android:id="@+id/textView20"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_below="@+id/datetextView"
            android:layout_centerHorizontal="true"
            android:layout_marginTop="31dp"
            android:text="Simply drag each symptom according to its severity."
            android:textAlignment="center"
            android:textSize="18sp"
            android:textColor="#A99F3C"/>

        <TextView
            android:id="@+id/textView"
            android:layout_width="wrap_content"
            android:layout_height="25dp"
            android:layout_alignStart="@+id/seekbar_tantrums"
            android:layout_below="@+id/textView20"
            android:layout_marginTop="27dp"
            android:text="Tantrums"
            android:textSize="18sp"
            android:textColor="#ED5752"/>

        <SeekBar
            android:id="@+id/seekbar_tantrums"
            style="@style/Widget.AppCompat.SeekBar.Discrete"
            android:layout_width="match_parent"
            android:layout_height="50dp"
            android:layout_alignStart="@+id/textView3"
            android:layout_below="@+id/textView"
            android:layout_marginTop="13dp"
            android:max="3"
            android:progress="0"
            android:thumb="@mipmap/nipple" />

        <ImageView
            android:id="@+id/imageView3"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_below="@+id/seekbar_tantrums"
            android:layout_alignParentEnd="true"
            android:src="@drawable/labels" />

        <TextView
            android:id="@+id/textView3"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_alignParentStart="true"
            android:layout_below="@+id/imageView3"
            android:layout_marginTop="18dp"
            android:text="Self-injurious Behavior"
            android:textSize="18sp"
            android:textColor="#ED5752"/>

        <SeekBar
            android:id="@+id/seekbar_sib"
            style="@style/Widget.AppCompat.SeekBar.Discrete"
            android:layout_width="match_parent"
            android:layout_height="48dp"
            android:layout_alignParentStart="true"
            android:layout_below="@+id/textView3"
            android:layout_marginTop="28dp"
            android:max="3"
            android:progress="0"
            android:thumb="@mipmap/nipple" />

        <ImageView
            android:id="@+id/imageView4"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_below="@+id/seekbar_sib"
            android:layout_alignParentEnd="true"
            android:src="@drawable/labels" />


        <TextView
            android:id="@+id/textView25"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_alignParentStart="true"
            android:layout_below="@+id/imageView4"
            android:layout_marginTop="18dp"
            android:text="Self-stimulating Behavior"
            android:textSize="18sp"
            android:textColor="#ED5752"/>

        <SeekBar
            android:id="@+id/seekbar_ssb"
            style="@style/Widget.AppCompat.SeekBar.Discrete"
            android:layout_width="match_parent"
            android:layout_height="48dp"
            android:layout_alignParentStart="true"
            android:layout_below="@+id/textView25"
            android:layout_marginTop="25dp"
            android:max="3"
            android:progress="0"
            android:thumb="@mipmap/nipple" />
        <ImageView
            android:id="@+id/imageView5"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_below="@+id/seekbar_ssb"
            android:layout_alignParentEnd="true"
            android:src="@drawable/labels" />

        <TextView
            android:id="@+id/textView26"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_alignParentStart="true"
            android:layout_below="@+id/imageView5"
            android:layout_marginTop="18dp"
            android:text="Hand-Leading"
            android:textSize="18sp"
            android:textColor="#ED5752"/>

        <SeekBar
            android:id="@+id/seekbar_hl"
            style="@style/Widget.AppCompat.SeekBar.Discrete"
            android:layout_width="match_parent"
            android:layout_height="48dp"
            android:layout_alignParentStart="true"
            android:layout_below="@+id/textView26"
            android:layout_marginTop="25dp"
            android:max="3"
            android:progress="0"
            android:thumb="@mipmap/nipple" />

        <ImageView
            android:id="@+id/imageView6"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_below="@+id/seekbar_hl"
            android:layout_alignParentEnd="true"
            android:src="@drawable/labels" />

        <TextView
            android:id="@+id/textView27"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_alignParentStart="true"
            android:layout_below="@+id/imageView6"
            android:layout_marginTop="18dp"
            android:text="Poor-Waiting"
            android:textSize="18sp"
            android:textColor="#ED5752"/>

        <SeekBar
            android:id="@+id/seekbar_pw"
            style="@style/Widget.AppCompat.SeekBar.Discrete"
            android:layout_width="match_parent"
            android:layout_height="48dp"
            android:layout_alignParentStart="true"
            android:layout_below="@+id/textView27"
            android:layout_marginTop="25dp"
            android:max="3"
            android:progress="0"
            android:thumb="@mipmap/nipple" />

        <ImageView
            android:id="@+id/imageView7"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_below="@+id/seekbar_pw"
            android:layout_alignParentEnd="true"
            android:src="@drawable/labels" />

        <TextView
            android:id="@+id/textView5"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_alignParentStart="true"
            android:layout_below="@+id/imageView7"
            android:layout_marginTop="18dp"
            android:text="Notes:"
            android:textSize="18sp"
            android:textColor="#ED5752"/>

        <EditText
            android:id="@+id/notes"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_alignParentStart="true"
            android:layout_below="@+id/textView5"
            android:layout_marginTop="10dp"
            android:ems="10"
            android:hint="Type more observations here!"
            android:inputType="textMultiLine"
            android:textSize="16sp"
            android:backgroundTint="#A99F3C"
            android:textColor="#A99F3C"/>

        <Button
            android:id="@+id/addbtn"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_alignParentStart="true"
            android:layout_below="@+id/notes"
            android:layout_marginTop="8dp"
            android:background="@drawable/button_custom"
            android:textColor="#ffffff"
            android:fontFamily="@font/gravity_light"
            android:text="SAVE RECORD"
            android:textStyle="bold" />

    </RelativeLayout>
</ScrollView>
</RelativeLayout>

