<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:orientation="vertical" android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:padding="10sp"
    android:background="#E2DFA2">

    <TextView
        android:id="@+id/textView12"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:gravity="center"
        android:text="Record Saved!"
        android:textSize="25sp"
        android:fontFamily="@font/gravity_light"
        android:textStyle="bold"
        android:layout_marginTop="10sp"
        android:textColor="#ED5752"/>

    <TextView
        android:id="@+id/textView13"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:gravity="center"
        android:text="Your entry for today has been saved! You may edit this entry anytime."
        android:textSize="18sp"
        android:fontFamily="@font/gravity_light"
        android:textStyle="bold"
        android:layout_marginTop="10sp"
        android:textColor="#A99F3C"/>

    <Button
        android:id="@+id/btn_okay"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:text="Okay"
        android:textStyle="bold"
        android:fontFamily="@font/gravity_light"
        android:layout_marginTop="10sp"
        android:background="@drawable/button_custom"
        android:textColor="#ffffff"/>

</LinearLayout>