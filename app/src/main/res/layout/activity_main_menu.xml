<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="#E2DFA2"
    tools:context="com.greenteam.otty.MainMenu">

    <ScrollView
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:fillViewport="true"
        android:isScrollContainer = "false">

        <android.support.constraint.ConstraintLayout
            android:layout_width="match_parent"
            android:layout_height="match_parent">

        <RelativeLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="vertical"
            android:padding="20dp"
            app:layout_constraintTop_toTopOf="parent"
            app:layout_constraintBottom_toBottomOf="parent">

        <ImageView
            android:id="@+id/imageView"
            android:layout_width="match_parent"
            android:layout_height="220dp"
            android:layout_alignParentStart="true"
            android:layout_alignParentTop="true"
            app:srcCompat="@drawable/logosplash" />

        <TextView
            android:id="@+id/textView15"
            android:layout_width="match_parent"
            android:layout_height="38dp"
            android:fontFamily="@font/gravity_light"
            android:text="You are evaluating"
            android:layout_marginTop="30dp"
            android:textColor="#ED5752"
            android:textSize="25sp"
            android:textStyle="bold"
            android:textAlignment="center"
            android:layout_below="@id/imageView"/>

        <TextView
            android:id="@+id/txt_name"
            android:layout_width="match_parent"
            android:layout_height="66dp"
            android:layout_marginTop="5dp"
            android:fontFamily="@font/gravity_light"
            android:text="TextView"
            android:textColor="#A99F3C"
            android:textSize="50sp"
            android:textStyle="bold"
           android:layout_below="@id/textView15"
            android:textAlignment="center"/>

        <Button
            android:id="@+id/btn_NewEnt"
            android:layout_width="match_parent"
            android:layout_height="46dp"
            android:layout_marginHorizontal="30dp"
            android:layout_marginTop="30dp"
            android:background="@drawable/button_custom"
            android:fontFamily="@font/gravity_light"
            android:text="New Entry"
            android:textColor="#ffffff"
            android:textStyle="bold"
            android:layout_below="@id/txt_name"
            android:textSize="16dp"/>

        <Button
            android:id="@+id/btn_Summ"
            android:layout_width="match_parent"
            android:layout_height="48dp"
            android:layout_marginHorizontal="30dp"
            android:layout_marginTop="8dp"
            android:background="@drawable/button_custom"
            android:fontFamily="@font/gravity_light"
            android:text="Summary"
            android:textColor="#ffffff"
            android:textStyle="bold"
            android:layout_below="@id/btn_NewEnt"
            android:textSize="16dp"/>

        <Button
            android:id="@+id/btn_AbtAut"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginHorizontal="30dp"
            android:layout_marginTop="8dp"
            android:background="@drawable/button_custom"
            android:fontFamily="@font/gravity_light"
            android:text="Get to know Otty"
            android:textColor="#ffffff"
            android:textStyle="bold"
            android:layout_below="@id/btn_Summ"
            android:textSize="16dp"/>

    </RelativeLayout>
        </android.support.constraint.ConstraintLayout>
    </ScrollView>
</RelativeLayout>
